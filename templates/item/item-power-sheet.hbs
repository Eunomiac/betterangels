<form class="{{cssClass}} {{item.type}}" autocomplete="off">
	
  {{!-- Sheet Background Images --}}
	<img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
	<img class="profile-img faded-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>

  {{!-- Sheet Name --}}
  <header class="sheet-header">
		<textarea class="item-name">{{item.name}}</textarea>
  </header>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
		{{{data.description}}}
		{{#if data.page}}
		<p class="pdf-link">
			<a class="pdfoundry-link" data-ref="{{data.book}}" data-page="{{data.page}}">
				Compiled Powers: {{item.name}}
			</a>
		</p>
		{{/if}}
  </section>

</form>