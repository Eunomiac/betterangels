<form class="{{cssClass}} {{item.type}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="item-name"><textarea>{{item.name}}</textarea></h1>
    </div>
  </header>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
		{{{data.description}}}
		{{#if data.page}}
		<p class="pdf-link">
			<a class="pdfoundry-link" data-ref="{{data.book}}" data-page="{{data.page}}">
				Compiled Demonic Aspects: {{item.name}}
			</a>
		</p>
		{{/if}}
  </section>

</form>
