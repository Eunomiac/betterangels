{{!-- This template is a fallback for when items don't have more specific templates. --}}
{{!-- Generally, you'll want to make more specific templates when possible. --}}
<form class="{{cssClass}} {{item.type}}" autocomplete="off">

	{{#if (test item.type "in" "power|aspect")}}
	<img class="background-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
	<img class="background-img faded-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
	{{/if}}

  <header class="sheet-header">
		{{#unless (test item.type "in" "power|aspect")}}
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
		{{/unless}}
    <div class="header-fields">
      <textarea class="item-name" name="name" value="{{item.name}}" placeholder="(item name)">{{item.name}}</textarea>
    </div>
  </header>


	{{#unless (test item.type "in" "power|aspect")}}
  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="attributes">Attributes</a>
  </nav>
	{{/unless}}

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{editor content=data.description target="data.description" rollData=rollData button=true owner=owner editable=editable}}
    </div>

    {{!-- Attributes Tab --}}
    <div class="tab attributes" data-group="primary" data-tab="attributes">
      {{!-- As you add new fields, add them in here! --}}
    </div>
  </section>
</form>
